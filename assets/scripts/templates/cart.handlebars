<div {{#if cart}}{{else}}class="modal-expand"{{/if}}>
  {{#if cart}}
  <div class="product-title modal-header">
    <h2>Your Shopping Cart</h2>
  </div>
  <table class="table table-responsive table-hover">
    <thead>
      <th>Item</th>
      <th>Quantity</th>
      <th>Total cost</th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
    {{#each cart as |item|}}
      <tr>
        <td>{{item.name}}</td>
        <td><input type="number" value="{{item.quantity}}" min="1" step="1" max="999" data-quantity="{{item.id}}"></td>
        <td>{{item.price}}</td>
        <td>
          <button class="btn btn-sm btn-success" data-update="{{item.id}}">Update Cart</button>
        </td>
        <td>
          <button class="btn btn-sm btn-danger" data-delete="{{item.id}}">&times;</button>
        </td>
      </tr>
    {{/each}}
  </tbody>
  </table>
  <div class="modal-footer">
    <div class="pull-left"><button id="empty-cart" class="btn btn-danger">Empty Cart <span class="glyphicon glyphicon-trash"></span></div>
    <div class="pull-right">

      <h4><a data-backToShopping href="#" class="btn btn-primary">Continue Shopping</a>    Items in cart: {{total}} Total price: ${{price}}
        <button class="btn btn-success checkout-btn">Checkout</button>
      </h4>
    </div>
  </div>
  {{else}}
    <div class="modal-content empty-modal">
      <h3> Your cart is empty</h3>
      <img src="https://i.imgur.com/DSTCCs6.jpg"/>
    </div>
  {{/if}}
</div>
